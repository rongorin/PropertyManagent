

    <li>
        <div class="address">
            <div class="housenumber"> 

                <a asp-controller="House"
                    asp-action="Details"
                    asp-route-id="@Model.HouseId">@Model.StreetNumber @Model.StreetName </a> 
               
            </div>
            <div class="fullname">
                @if (Model.FullName.Length > 39) 
                    @Model.FullName.ToString().Substring(0, 39) 
                else  
                    @Model.FullName 
            </div>
        </div>
        <div class="details">
            <span class="categoryname">
                @Model.InvoicesBalance.ToString("c")
            </span>
            <span class="invstatus">
                <div class="goToInvoices">
                    <p class="button">
                        <a class="btn btn-sm"
                           asp-controller="Invoice"         
                           asp-action="Index"
                           asp-route-id="@Model.HouseId">Invoices</a>
                    </p>
                </div>
            </span>
        </div>
        <div class="details2">
            <span class="descr">
                @Model.Description
            </span>
        </div>
    </li>